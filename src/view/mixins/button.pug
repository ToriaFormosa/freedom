mixin button(text, className, svgName, href)
	if href
		a.button(href=href, class=className)&attributes(attributes)
			if svgName
				svg
					use(xlink:href=`./images/sprite.svg#${svgName}`)
			if text
				span!= text
	else
		button.button(class=className)&attributes(attributes)
			if svgName
				svg
					use(xlink:href=`./images/sprite.svg#${svgName}`)
			if text
				span!= text
